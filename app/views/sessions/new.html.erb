<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :username, "Username" %>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Enter the application" %>
  </div>
<% end %>

<p id="error"><%= flash[:error] %></p>