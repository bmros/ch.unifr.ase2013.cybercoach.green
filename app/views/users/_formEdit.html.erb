<div class="wrapper">
 <%= form_for @user,:html => {:class => 'form'}  do |f| %>
  <div class="header">
   <h1>Update profile Form</h1>
   <span>Fill out the form below to update your profile</span>
  </div>  
  <div class="content">
   <div class="field">
    <%= f.text_field :username, :class => 'input', :placeholder => "Username" %>
   </div>
   <div class="field">
    <%= f.text_field :password, :class => 'input', :placeholder => "Password" %>
   </div>
   <div class="field">
    <%= f.text_field :realname, :class => 'input', :placeholder => "Realname" %>
   </div>   
   <div class="field">
    <%= f.text_field :email, :class => 'input', :placeholder => "Email" %>
   </div>      

  <%= f.hidden_field :publicvisible, :value => '2' %>
   
  </div>
  <div class="footer">
   <input type="submit" name="submit" value="Update profile" class="register" />
   </div>
 <% end %>
</div>
<div class="gradient"></div>

